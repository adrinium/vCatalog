@page
@model vCatalogRazor.Pages.promotie.IndexModel

@{
    ViewData["Title"] = "Listă promoții";
}
<div class="card">
    <div class="card-header text-bg-primary">
        <h5>Listă promoții</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12 mb-3">
                <a asp-page="Create" class="btn btn-sm btn-primary float-end">Promoție nouă</a>
            </div>
            
        </div>
            
        <table class="table table-striped table-bordered">
            <thead class="table-secondary">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Promotie[0].Nume)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Promotie[0].Descriere)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Promotie[0].IsActive)
                    </th>
                    <th>Acțiuni</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Promotie)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nume)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descriere)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm mx-1">
                                <i class="bi bi-pencil"></i> Editare
                            </a>
                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-success btn-sm mx-1">
                                <i class="bi bi-list"></i> Detalii
                            </a>
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm mx-1">
                                <i class="bi bi-trash-fill"></i> Ștergere
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
