@page
@model vCatalogRazor.Pages.clasa.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Clasa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Clasa.Id" />
            <div class="form-group">
                <label asp-for="Clasa.Nume" class="control-label"></label>
                <input asp-for="Clasa.Nume" class="form-control" />
