@page
@using System.Data
@model vCatalogRazor.Pages.situatii.MediiGeneraleModel
@{
    ViewData["Title"] = "Medii generale";
}
<div class="card">
    <div class="card-header text-bg-primary">
        <h5 class="card-title">Medii generale promotia X</h5>
    </div>
    
    <div class="card-body">
        <form method="post">
            <div class="row">
                <div class="col-12 mb-3">
                    <select asp-for="selectedFilter" asp-items="Model.Promotii" class="form-select w-25">
                        <option selected>Alege promoția</option>
                    </select>
                </div>
            </div>
        </form>
        
        <table class="table table-striped table-bordered">
            <thead class="table-info">
                <tr>
                    <th class="text-center">#</th>
                    <th>Nume și prenume</th>
                    <th class="text-center">Clasa</th>
                    <th class="text-center">Medie<br />școlaritate</th>
                    <th class="text-center">Abs.<br />practic</th>
                    <th class="text-center">Abs.<br />scris</th>
                    <th class="text-center">Abs.<br />oral</th>
                    <th class="text-center">Medie<br />ex. abs.</th>
                    <th class="text-center">Medie<br />generală</th>
                </tr>
            </thead>
            <tbody>
                @foreach (DataRow row in Model.dt.Rows)
                {
                    <tr>
                        <td class="text-center">@row[0]</td>
                        <td>@row[1]</td>
                        <td class="text-center">@row[2]</td>
                        <td class="text-center">@String.Format("{0:f}", row[3])</td>
                        <td class="text-center">@String.Format("{0:f}", row[4])</td>
                        <td class="text-center">@String.Format("{0:f}", row[5])</td>
                        <td class="text-center">@String.Format("{0:f}", row[6])</td>
                        <td class="text-center">@String.Format("{0:f}", row[7])</td>
                        <td class="text-center fw-bold">@String.Format("{0:f}", row[8])</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
